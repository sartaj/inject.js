{
  "name": "lean-web-components",
  "version": "0.3.0",
  "description": "A micro-library (2kb) to lazy load and import Web Components.",
  "main": "lean.js",
  "scripts": {

    "build-js"      : "browserify -e ./index.js -s lean | uglifyjs -mc > lean.min.js",
    "watch-js"      : "watchify ./index.js -s lean -o lean.min.js -dv",

    "watch-tests"   : "mochify --watch",
    "phantom"       : "mochify --reporter tap",
    "cover"         : "npm run phantom --plugin [ mochify-istanbul --report html ]",
    "test"          : "npm run phantom && npm run cover",

    "build"         : "npm run build-js",
    "dev"           : "npm run watch-tests & npm run watch-js"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sartaj/lean.js.git"
  },
  "keywords": [
    "Web",
    "Components",
    "Polymer",
    "Lazy"
  ],
  "author": "sartaj <sartaj@sartaj.me> (http://sartaj.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sartaj/lean.js/issues"
  },
  "homepage": "https://github.com/sartaj/lean.js#readme",
  "devDependencies": {
    "browserify": "^11.0.1",
    "watchify": "^3.3.1",
    "tape": "^4.0.1",
    "mochify": "^2.12.0",
    "mochify-istanbul": "^2.3.0"
  }
}
